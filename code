	setlocale(LC_ALL, "Rus");
	int size2{};
	int size{};
	Rec* records= new Rec[size];
	Rec* array = new Rec[size2];
	int menu;
	bool flag;

	system("cls");
	do {
		cout << "---------------------------------------------------" << endl;
		cout << "Меню:" << endl;
		cout << "---------------------------------------------------" << endl;
		cout << "1 - Выйти из программы" << endl;
		cout << "2 - Вывести таблицу с клиентами" << endl;
