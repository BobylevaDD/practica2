			int dayToSearch, monthToSearch, yearToSearch;
			cout << "Введите дату для поиска (ДД ММ ГГГГ): ";
			cin >> dayToSearch >>monthToSearch >>yearToSearch;

			cout << "Результаты поиска по дате '" << dayToSearch << "/" << monthToSearch << "/" << yearToSearch << "':" << endl;
