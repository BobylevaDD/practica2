		}
        for (int i=0;i<count;i++){
            for (int j=0;j<14;j++){
                matrix [i][j] = '\0';
            }
		}
		count =0;
		break;
	case 2:
		for (int i = 0; i < count; i++) {
			for (int j = i + 1; j < count; j++) {
